{
    "license": "MIT",
    "type": "library",
    "name": "math3usmartins/php-minibus",
    "description": "MiniBus is a minimal and framework-agnostic message bus for PHP apps",
    "autoload": {
        "psr-4": {
            "MiniBus\\": "src",
            "MiniBus\\Test\\": "test"
        }
    },
    "require": {
        "php": "^5.6",
        "math3usmartins/fun-php-either": "0.0.2"
    },
    "suggest": {
        "ext-json": "*",
        "ext-pcntl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "phpunit/php-code-coverage": "^4.0",
        "friendsofphp/php-cs-fixer": "^2.19"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/math3usmartins/fun-php-either"
        }
    ]
}
